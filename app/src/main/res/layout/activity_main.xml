<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/SearchForMeals_button"
        android:layout_width="342dp"
        android:layout_height="60dp"

        android:text="Search for Meals"
        app:layout_constraintBottom_toTopOf="@+id/SearchMealsByIngredients_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/SearchMealsByIngredients_button"
        android:layout_width="341dp"
        android:layout_height="56dp"
        android:text="Search for Meals By Ingredients"
        app:layout_constraintBottom_toTopOf="@+id/SearchByName_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchForMeals_button"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/SearchByName_Button"
        android:layout_width="343dp"
        android:layout_height="51dp"
        android:text="Search By Name"
        app:layout_constraintBottom_toTopOf="@+id/addMealToDB_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchMealsByIngredients_button"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/addMealToDB_button"
        android:layout_width="340dp"
        android:layout_height="58dp"
        android:text="Add Meals to DB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchByName_Button"
        app:layout_constraintVertical_bias="0.05" />


</androidx.constraintlayout.widget.ConstraintLayout>